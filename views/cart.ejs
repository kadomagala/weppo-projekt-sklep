<!DOCTYPE html>
<html>
<% include head.ejs %>

    <body>
        <% include navbar.ejs %>
            <div class="body-wrap">
                <h2>Koszyk</h2>
                <div class="products row">
                    <table>
                        <tr>
                            <th>Nazwa</th>
                            <th>Zdjęcie</th>
                            <th>Cena</th>
                            <th>Usuń</th>
                            <th>Liczba</th>
                            <th>Dodaj</th>
                            <th>Warotść</th>

                        </tr>
                        <% 
                        products.forEach(item => { %>
                            <tr>
                                <th>
                                    <%= item.name %>
                                </th>
                                <th>
                                    <img src="<%= item.image %>" alt="" height="50px">
                                </th>
                                <th>
                                    <%= item.price %>
                                </th>
                                <th>
                                    <a href="/remove-from-cart/<%= item.id %>"><b>-</b></a>
                                </th>
                                <th>
                                    <%= item.quantity %>
                                </th>
                                <th>
                                    <a href="/add-to-cart/<%= item.id %>"><b>+</b></a>
                                </th>
                                <th>
                                    <%= item.itemTotal %>
                                </th>
                            </tr>
                            <%  });  %>
                    </table>

                </div>
                <p>Całkowity koszt
                    <%= total %>
                </p>
    </body>



</html>